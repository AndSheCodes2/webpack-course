{
  "name": "webpack-course",
  "version": "1.0.0",
  "description": "Webpack: Beyond the Basics Course",
  "repository": "https://github.com/lawwantsin/webpack-course.git",
  "main": "index.js",
  "license": "MIT",
  "dependencies": {
    "babel-cli": "*",
    "babel-core": "*",
    "babel-loader": "*",
    "babel-plugin-transform-runtime": "*",
    "babel-polyfill": "*",
    "babel-preset-env": "*",
    "babel-preset-es2015": "*",
    "babel-preset-react": "*",
    "brotli-webpack-plugin": "*",
    "compression-webpack-plugin": "*",
    "css-loader": "*",
    "cssnano": "*",
    "ejs-loader": "*",
    "express": "*",
    "express-static-gzip": "*",
    "extract-loader": "*",
    "extract-text-webpack-plugin": "*",
    "file-loader": "*",
    "html-loader": "*",
    "html-webpack-plugin": "*",
    "markdown-with-front-matter-loader": "^0.1.0",
    "optimize-css-assets-webpack-plugin": "*",
    "react": "*",
    "react-dom": "*",
    "react-hot-loader": "*",
    "style-loader": "*",
    "url-loader": "*",
    "webpack": "*",
    "webpack-bundle-analyzer": "^2.9.1",
    "webpack-dev-server": "*",
    "webpack-hot-middleware": "*",
    "webpack-mild-compile": "*",
    "webpack-node-externals": "^1.6.0"
  },
  "scripts": {
    "start": "webpack-dev-server --config=config/webpack.dev.js",
    "build":
      "BABEL_ENV=production webpack --config=config/webpack.prod.js --env.NODE_ENV=production",
    "stats":
      "BABEL_ENV=production webpack --config=config/webpack.prod.js --env.NODE_ENV=production --profile --json > dist/stats.json",
    "build:dev": "webpack --config=config/webpack.dev.js",
    "build:server":
      "BABEL_ENV=production webpack --config=config/webpack.server.js --env.NODE_ENV=production",
    "dev":
      "nodemon --watch src/server --watch config --inspect src/server/main.js",
    "prod": "NODE_ENV=production node build/server-bundle.js",
    "heroku-postbuild": "npm run build"
  }
}
